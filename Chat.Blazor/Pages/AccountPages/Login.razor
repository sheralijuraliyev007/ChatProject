@page "/account/login"
@using Chat.Blazor.Repositories.Contracts
@inject IUserIntegration UserIntegration
@inherits  LoginBase



<h3>Login</h3>



<form @onsubmit="LoginClicked" class="p-4 rounded shadow-sm bg-light" style="max-width: 400px; margin: auto;">
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input @bind="LoginUserModel.UserName" id="username" class="form-control" type="text" placeholder="Enter your username" required>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input @bind="LoginUserModel.Password" id="password" class="form-control" type="password" placeholder="Enter your password" required>
    </div>
    <button class="btn btn-primary w-100" type="submit">Login</button>
</form>


